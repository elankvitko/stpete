<body class="light">
    <!-- Header Starts -->
    <main id="top" class="masthead" role="main">
        <div class="container">
            <!-- Startup Logo -->
            <div class="logo">
                <!-- <a href="#"><img src="images/logo-dark.png" alt="All in One Logo"></a> -->
            </div>
            <!-- Hero Title -->
            <h1 class="main-title">St. Petersburg</h1>
            <!-- Sub Title -->
            <!-- <h4 class="sub-title">Slogan</h4> -->
            <!-- Quick Features and form -->
            <div class="row has-padding-top">

                <!-- Signup form -->
                <div class="col-sm-6 col-sm-offset-3 col-md-offset-0 col-md-4 col-md-push-8">
                    <div class="contact-form">
                        <!-- <div class="point-arrow hidden-xs hidden-sm"><img src="images/arrow-dark.png" align="arrow" /> </div> -->
                        <h6 class="mini-title">Please fill out this form to request<br>
            more information.</h6>

                        <!--### Contact form ###
            Tip : You can change the text of success/error messages on /js/contact_form.js file -->

                        <!--If you want your users to redirect to another page, add the page name inside data-redirect
            For example, if you want to redirect to thanks.html page, the code should look like  (data-redirect="thanks.html")-->

                        <form class="form" id="railscontactform" data-redirect="none" method='post' action='/home'>
                            <div class="form-group">
                                <input class="form-control input-lg" type="text" placeholder="Full Name" name="name" id="name" required>
                            </div>
                            <div class="form-group">
                                <input class="form-control input-lg" type="email" placeholder="Email" name="email" id="email" required>
                            </div>
                            <div class="form-group">
                                <input class="form-control input-lg" type="text" placeholder="Phone Number" name="mobile" id="mobile" required>
                            </div>
                            <input class="btn btn-success btn-lg btn-block submit-top-form" type="submit" value="Submit">
                            <span class="loading"></span>
                        </form>
                    </div>
                </div>

                <div class="col-sm-12 col-md-8 col-md-pull-4">
                    <!-- <img src="images/real-est-banner.png" alt="banner" class="img-responsive"> -->
                </div>

            </div>
            <!-- // Contact  form Ends -->

        </div>
    </main>
    <!-- // Parallax Header Ends -->
    <!-- Container -->
    <div class="container" id="explore">
        <!-- Featured Image + Desc -->
        <!-- //Featured Image + Desc -->

        <!--Supporting Content-->

        <section class="supporing-content">
            <div class="row has-padding-top">
                <div class="col-md-7">
                    <h4>Property Description</h4>
                    <p>
                      Year Built 1926/ 2014 Major Renovation <br>
                      Building Size approx. 33,000 sq. ft. <br>
                      Lot includes 2 adjacent parcels.  Total land under 1 acre <br>
                      60 Rooms / 60 Units all with bathroom and showers <br>
                      Many common areas.  Full commercial kitchen and dining room <br>
                      All FF&F included and property is turn key for limited services hotel <br>
                      And Seniors Housing/Congregate Care <br>
                      Subject property is currently licensed for 60 bed assisted living facility
                    </p>
                </div>
                <div class="col-md-5"> <%= image_tag( "_DSC0093-1", alt: "image", class: "img-responsive center-block" ) %></div>
            </div>
        </section>

        <!-- // Supporting Content-->

        <!-- Features Section -->

        <section class="row features has-padding-top">
            <!-- Feature 01 -->
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail"> <%= image_tag( 'icon-color-2.png' ) %>
                    <div class="caption">
                        <h3>Historical Building</h3>
                        <p>Built in 1924, this beautiful historic building went through major renovations in 2012</p>
                    </div>
                </div>
            </div>

            <!-- Feature 02 -->
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail"> <%= image_tag( 'icon-color-2.png' ) %>
                    <div class="caption">
                        <h3>Talk About Size</h3>
                        <p>This 3 story building with 60 rooms/units is a whopping 31,000 square feet situated in the heart of St. Petersburg, Fl</p>
                    </div>
                </div>
            </div>

            <!-- Feature 03 -->
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail"> <%= image_tag( 'icon-color-2.png' ) %>
                    <div class="caption">
                        <h3>The Land</h3>
                        <p>The lot size is just under an acre with the adjacent lots included in the sale</p>
                    </div>
                </div>
            </div>


        </section>
        <!-- // Features Section Ends -->

        <!-- Video Section -->

        <div class="section-title">
            <h2>Take a look at our virtual tour <a href="http://www.tourbuzz.net/public/vtour/display/599797?idx=1" target='_blank'>Here!</a></h2>
        </div>

        <div id="blueimp-gallery" class="blueimp-gallery">
          <!-- The container for the modal slides -->
          <div class="slides"></div>
          <!-- Controls for the borderless lightbox -->
          <h3 class="title"></h3>
          <a class="prev">‹</a>
          <a class="next">›</a>
          <a class="close">×</a>
          <a class="play-pause"></a>
          <ol class="indicator"></ol>
          <!-- The modal dialog, which will be used to wrap the lightbox content -->
          <div class="modal fade">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" aria-hidden="true">&times;</button>
                  <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body next"></div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default pull-left prev">
                      <i class="glyphicon glyphicon-chevron-left"></i>
                      Previous
                  </button>
                  <button type="button" class="btn btn-primary next">
                      Next
                      <i class="glyphicon glyphicon-chevron-right"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div id="links">
          <a href="assets/_DSC0093-1" title="" data-gallery>
              <%= image_tag( "_DSC0093-1", width: '300px' ) %>
          </a>
          <a href="assets/_DSC0096-3" title="" data-gallery>
