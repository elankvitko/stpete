          </a>
          <a href="assets/_DSC0107-9" title="" data-gallery>
              <%= image_tag( "_DSC0107-9", width: '300px' ) %>
          </a>
          <a href="assets/_DSC0109-10" title="" data-gallery>
              <%= image_tag( "_DSC0109-10", width: '300px' ) %>
          </a>
        </div>


        <!-- <div class="video-block text-center" id="videoBlock"> -->
            <!-- <iframe src="https://player.vimeo.com/video/4240369?wmode=opaque&title=0&byline=0&portrait=0&badge=0" width="620" height="348" frameborder="0" webkitallowfullscreen="" mozallowfullscreen="" allowfullscreen=""></iframe> -->
        <!-- </div> -->

        <!-- // Video Section -->

    </div>
    <!-- // Container Ends -->

    </div>
    <!-- // Container Ends -->

    <!--  Footer CTA Starts -->

    <section class="highlight">
        <div class="container">

            <div class="section-title">
                <h2>If You Are Interested, Please Get In Touch With Us Below</h2>
            </div>
            <!-- Mailchimp Subscribe form -->
            <div class="row has-margin-bottom">
                <div class="col-md-12 text-center"> <a href="#top" class="btn btn-primary btn-lg">REQUEST MORE INFORMATION</a> </div>
            </div>
        </div>
    </section>

    <!-- //  Footer CTA Ends -->

    <!-- Container -->
    <div class="container">
        <section class="row breath">
            <div class="col-md-12 footerlinks">
                <p>&copy; 2017 All in One. All Rights Reserved</p>
            </div>
        </section>
        <!-- // End Client Logos -->

    </div>
    <!-- // Container Ends -->

    <!-- JS and analytics only. -->
    <!-- Bootstrap core JavaScript
================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag 'bootstrap.min.js' %>
    <%= javascript_include_tag 'ketchup.all.js' %>
    <%= javascript_include_tag 'contact_form.js' %>
    <%= javascript_include_tag 'exitpopup.js' %>
    <%= javascript_include_tag 'script.js' %>
    <%= javascript_include_tag 'fitvids.js' %>

    <script>
    $(document).ready(function() {
        // Target your .container, .wrapper, .post, etc.
        $("#videoBlock").fitVids();
    });


    $( '.submit-top-form' ).on( 'click', function( e ) {
      e.preventDefault();

      var target = e.target.parentElement;
      var type = target.method;
      var url = target.action;
      var data = $( target ).serialize();

      $.ajax({
        type: type,
        url: url,
        data: data
      }).done( function( response ) {
        $( '#railscontactform' ).hide();
        $( '.contact-form' ).append( response );
        $( '.contact-form' ).append( "<br><br><br><br>" );
      });
    });
    </script>
</body>
